{
  "version": "0.1.0",
  "name": "elmish-electron",
  "displayName": "Elmish Electron",
  "private": true,
  "main": "app/main.js",
  "scripts": {
    "main": "cd src/Main && dotnet fable webpack --port free -- --mode=development --open --config webpack.main.config.js --config-name mainConfig",
    "renderer": "cd src/Renderer && dotnet fable webpack-dev-server --mode=development --config webpack.renderer.config.js",
    "start": "concurrently \"yarn run main\" \"yarn run renderer\"",
    "build": "cd src/Main && dotnet fable webpack --port free -- -p --mode=production --config webpack.config.js",
    "launch": "electron .",
    "release": "electron-packager . --out release --overwrite"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "bootstrap": "^4.1.3",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "reactstrap": "^6.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-loader": "^8.0.0",
    "concurrently": "^4.0.1",
    "css-loader": "^1.0.0",
    "electron": "^3.0.4",
    "electron-devtools-installer": "^2.2.4",
    "electron-packager": "^12.2.0",
    "fable-loader": "^2.0.0",
    "loglevel": "^1.5.1",
    "remotedev": "^0.2.7",
    "style-loader": "^0.23.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
